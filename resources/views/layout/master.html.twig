<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block metatags %}
        <!-- meta -->
    {% endblock %}
    <title>{% block title %}Boson{% endblock %}</title>
    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Roboto+Condensed:wght@100..900&display=swap" rel="stylesheet">

        <!-- styles -->
        {{ vite_entry_link_tags('app') }}
    {% endblock %}
    <link rel="icon" type="image/png" sizes="16x16" href="/images/logo.png">
</head>
<body lang="{{ app.request.locale|slice(0, 2) }}">
    {% block header %}
        {% include 'partials/header.html.twig' %}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {% block javascripts %}
        <!-- scripts -->
        {{ vite_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
