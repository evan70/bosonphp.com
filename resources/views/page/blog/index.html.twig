{% extends 'layout/master.html.twig' %}

{% block title %}
    Boson Blog :: {{ parent() }}
{% endblock %}

{% block body %}

    <h1>Blog</h1>

    {% for article in articles %}

        <h2>
            <a href="{{ path('blog.show', {slug: article.slug}) }}">
                {{ article.title }}
            </a>
        </h2>

        <hr />
    {% endfor %}

{% endblock %}
