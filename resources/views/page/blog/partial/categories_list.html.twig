<aside>
    <nav>
        <ul>
            <li>
                {% if app.request.get('_route') == 'blog.index' %}
                    <strong>All Blog Posts</strong>
                {% else %}
                    <a href="{{ path('blog.index') }}">All Blog Posts</a>
                {% endif %}
            </li>
            {% for current in categories %}
                <li>
                    {% if category is defined and category.id.equals(current.id) %}
                        <strong>
                            {{ current.title }}
                        </strong>
                    {% else %}
                        <a href="{{ path('blog.index_by_category', {slug: current.slug}) }}">
                            {{ current.title }}
                        </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
</aside>
