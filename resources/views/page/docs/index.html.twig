{% extends 'layout/master.html.twig' %}

{% block title %}
    Documentation :: {{ parent() }}
{% endblock %}

{% block body %}

    <boson-breadcrumbs>
        <a href="{{ path('home') }}">Home</a>

        {% include 'page/docs/partials/version_selector.html.twig' with {
            version: version,
            versions: versions,
        } %}
    </boson-breadcrumbs>

    <h1>Documentation</h1>

    <div style="display: grid; grid-template-columns: 1fr 1fr 1fr;" class="grid">
        {% for category in version.categories %}
        <article>
            <hgroup>
                <h2>
                    {% if category.icon is not null %}
                        <img src="{{ category.icon }}" style="height: 1.75rem" />
                    {% endif %}
                    {{ category.title }}
                </h2>
                {% if category.description is not null %}
                <p style="padding-top: 20px;">
                    {{ category.description }}
                </p>
                {% endif %}
            </hgroup>
            <ul>
                {% for page in category.pages %}
                <li>
                    {% if page.type.name == 'Link' %}
                        <a href="{{ page.uri }}" target="_blank">
                            {{ page.title }}
                            <img src="https://intellij-icons.jetbrains.design/icons/AllIcons/expui/ide/externalLink_dark.svg"
                                 width="18" height="18" />
                        </a>
                    {% else %}
                        <a href="{{ path('doc.show', {
                            page: page.uri,
                            version: version.name
                        }) }}">
                            {{ page.title }}
                        </a>
                    {% endif %}
                </li>
                {% endfor %}
            </ul>
        </article>
        {% endfor %}
    </div>

{% endblock %}
